%section.extra-padding.invert-section
	.container
		.row
			.col-md-2
			.col-md-8
				.text-center
					%h2
						Get started today
					%p.lead2
						Morbi ornare odio felis, sed luctus metus rhoncus ac. Suspendisse ullamcorper lorem massa, sed vulputate mauris tristique et.
				.row
					.col-lg-1
					.col-lg-10
						.form
							.form-group
								%input.form-control.input-lg{:placeholder=>"Name"}
							.form-group
								%input.form-control.input-lg{:placeholder=>"Phone"}
							.form-group
								%input.form-control.input-lg{:placeholder=>"Email"}
							.form-group
								%textarea.form-control.input-lg{:placeholder=>"Additional comments", :rows=>"8"}
							%a.btn.btn-default.btn-block.btn-lg{:href=>"#"}
								Submit
					.col-lg-1
			.col-md-2