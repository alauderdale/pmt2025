=partial"/public/shared/page-head-small", locals:{headerClass:"training-pmp-header"}


%section.extra-padding
	.container
		.row
			.col-md-2
			.col-md-8
				.text-center
					%h2
						I’m the headline for this feature
					%p.lead2
						=lorem.words(20)
					%a.btn.btn-default{:href=>"#"}
						Start now
				.row
					.col-lg-12.margin-top
						=image_tag"public/corporate_training/hero.png", :class=>"img-responsive margin-auto double-margin-top" , :width=>"535px"
			.col-md-2
%section.off-blue.extra-padding
	.container
		.row
			.col-md-6.col-md-push-6
				=image_tag"public/corporate_training/template/2.png", :class=>"img-responsive margin-auto double-margin-top margin-bottom" , :width=>"454px"
			.col-md-6.col-md-pull-6
				%h2
					I’m the headline for this feature
				%p.lead2
					=lorem.words(20)
				%p.bold-font-name
					Our volume discount purchase program includes:
				%ul.list-default
					-4.times do
						%li
							=lorem.words(6)
				%a.link-underline{:href=>"#"}
					Call to action for this feature



