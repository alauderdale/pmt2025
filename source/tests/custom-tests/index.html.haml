"title": "Custom Tests",
"nav_title": "Custom Tests",
"subnav_data": "tests_subnav"

;;;


%section
	.container
		.row
			.col-lg-12
				=partial "/shared/subnav_with_links"
		.row
			.col-lg-12
				%h3
					Creae your own test
		.row.double-margin-bottom
			.col-sm-6
				.row.margin-bottom.padding-right
					.col-sm-10.col-xs-12
						%p.extra-bold-font-name.half-margin-bottom
							Create a Test by Knowledge Area
						%p
							Once created, questions will be randomly selected from our database. The test will be listed below.
						%a.btn.btn-primary{"data-toggle"=>"modal", :href=>"/tests/custom-tests/new", "data-target"=>"#newCustomTestModal"}
							%i.fa.fa-plus-circle
							Create Test by Knowledge Area
					.col-sm-2.hidden-xs
						.text-center
							=image_tag'icons/icon_knowlage.png', :class=>"img-responsive"
			.col-sm-6
				.row.margin-bottom.padding-left.no-padding-left-sm
					.col-sm-10.col-xs-12
						%p.extra-bold-font-name.half-margin-bottom
							Create a Test by Process Group
						%p
							Once created, questions will be randomly selected from our database. The test will be listed below.
						%a.btn.btn-primary{"data-toggle"=>"modal", :href=>"/tests/custom-tests/new", "data-target"=>"#newCustomTestModal"}
							%i.fa.fa-plus-circle
							Create Test by Process Group
					.col-sm-2.hidden-xs
						.text-center
							=image_tag'icons/icon_paper.png', :class=>"img-responsive"
		.row
			.col-lg-12
				%h3
					My Custom Tests
		.row
			.col-lg-12
				-2.times do
					=partial "/shared/custom-test-thumb-lg", :locals=>{ :status=>"Not Started", :iconClass=>"fa-circle-o", :btnTitle=>"Take The Test", :textStatusClass=>"text-muted"}
				=partial "/shared/custom-test-thumb-lg", :locals=>{ :status=>"In Progress", :iconClass=>"fa-circle", :btnTitle=>"Resume Test", :textStatusClass=>"text-warning"}
				=partial "/shared/custom-test-thumb-lg", :locals=>{ :status=>"Complete", :iconClass=>"fa-check-circle", :btnTitle=>"Re-take Test", :textStatusClass=>"text-success"}


				